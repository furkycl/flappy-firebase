rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isValidName(n) {
      return n is string && n.size() > 0 && n.size() <= 24;
    }
    function isValidScore(s) {
      // 11 ve üzeri skorlara izin ver
      return s is number && s >= 11 && s <= 5000 && s == int(s);
    }

    // Her kullanıcı yalnızca bir kez skor kaydedebilir: /scores/{uid}
    match /scores/{uid} {
      allow read: if true;
      allow create: if request.auth != null
        && request.auth.uid == uid
        && isValidName(request.resource.data.name)
        && isValidScore(request.resource.data.score)
        && request.resource.data.ts is timestamp
        && !exists(/databases/$(database)/documents/scores/$(uid));
      allow update, delete: if false;
    }
  }
}
